set nocompatible
filetype on
filetype plugin on
filetype indent on
syntax on
set number
set cursorline
set tabstop=4
set nobackup
set showcmd
set showmatch

set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.flv,*.img,*.xlsx

